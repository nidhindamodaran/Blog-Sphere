<!DOCTYPE html>
<html>
<head>
  <title>Blog Sphere</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= link_to '<i class="glyphicon glyphicon-globe"></i> Blog Sphere'.html_safe,users_path, :class => "navbar-brand" %>
          </div>
          <ul class="nav navbar-nav navbar-right">

        <% if current_user %>

          <li><%= link_to current_user.email, user_path(current_user) %></a></li>
          <li><%= link_to '<i class="glyphicon glyphicon-log-out"></i> Logout'.html_safe, log_out_path %></li>

        <% else %>
          <li><%= link_to '<i class="glyphicon glyphicon-log-in"></i> Login'.html_safe, log_in_path %></li>
          <li><%= link_to '<i class="glyphicon glyphicon-user"></i> SignUp'.html_safe, new_user_path %></li>
        <% end %>

      </ul>
        </div>
      </nav>
      <div class="col-sm-9"><%= yield %></div>
      <% if current_user %>
      <div class="col-sm-3"><%= link_to  '<i class="glyphicon glyphicon-pencil"></i> New Article'.html_safe, new_article_path, class: "btn btn-primary"  %>
      </div>
      <% end %>

    </div>




  </div>

  <nav class="navbar navbar-inverse navbar-fixed-bottom">


  </nav>


</body>
</html>
