
<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-info">
      <h2>Sign Up Error </h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email, class: "form-control", placeholder: "E-Mail" %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "form-control", placeholder: "**********" %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "**********"%>
  </p>
  <p>
    <%= f.submit :submit, value:"SignUp", class: "btn btn-success" %>
  </p>

<% end %>
