<%= form_for :article, url: articles_path do |f| %>
<table >
  <tr>
    <td><%= f.label :title %></td>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <td><%= f.label :text %></td>
    <td><%= f.text_area :text %></td>
  </tr>
  <tr>
    <td><%= f.submit :submit.capitalize %></td>
  </tr>
</table>
<% end %>
<%= link_to "Back", root_path, :controller => "welcome" %>
