
<%= form_for @article do |f| %>
<% if @article.errors.any? %>
  <div class = "error_box">
    <h2><%= pluralize(@article.errors.count, "error") %>
    prohibited this article from saving</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
      <% end %>
    </ul>
  </div>
<% end %>

<table >
  <tr>
    <td><%= f.label :title %></td>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <td><%= f.label :text %></td>
    <td><%= f.text_area :text %></td>
  </tr>
  <tr>
    <td><%= f.submit :submit.capitalize %></td>
  </tr>
</table>
<% end %>
